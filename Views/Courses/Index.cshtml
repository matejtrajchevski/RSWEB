@model IEnumerable<UniversityManagement.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" name="titleSearch" value="@ViewData["TitleSearch"]" class="form-control" placeholder="Title" />
        </div>
        <div class="col-md-2">
            <input type="number" name="semesterSearch" value="@ViewData["SemesterSearch"]" class="form-control" placeholder="Semester" />
        </div>
        <div class="col-md-2">
            <input type="text" name="programmeSearch" value="@ViewData["ProgrammeSearch"]" class="form-control" placeholder="Programme" />
        </div>
        <div class="col-md-3">
            <select name="teacherId" class="form-control">
                <option value="">-- Select Teacher --</option>
                @foreach (var teacher in ViewBag.Teachers)
                {
                    <option value="@teacher.Value" selected="@(teacher.Value == ViewData["TeacherId"]?.ToString())">@teacher.Text</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-secondary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Credits</th>
            <th>Semester</th>
            <th>Programme</th>
            <th>First Teacher</th>
            <th>Second Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Credits)</td>
            <td>@Html.DisplayFor(modelItem => item.Semester)</td>
            <td>@Html.DisplayFor(modelItem => item.Programme)</td>
            <td>@(item.FirstTeacher?.FirstName + " " + item.FirstTeacher?.LastName)</td>
            <td>@(item.SecondTeacher?.FirstName + " " + item.SecondTeacher?.LastName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="EnrollStudents" asp-route-id="@item.Id" class="btn btn-sm btn-success">Students</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
