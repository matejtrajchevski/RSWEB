@model UniversityManagement.Models.Enrollment

@{
    ViewData["Title"] = "Upload Document";
}

<h1>Upload Document</h1>
<h4>@Model.Course?.Title - @Model.Student?.FirstName @Model.Student?.LastName</h4>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="UploadDocument" enctype="multipart/form-data">
            <input type="hidden" name="enrollmentId" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="seminalDocument" class="control-label">Seminal Work (doc, docx, pdf)</label>
                <input type="file" name="seminalDocument" id="seminalDocument" class="form-control" accept=".doc,.docx,.pdf" />
                @if (!string.IsNullOrEmpty(Model.SeminalUrl))
                {
                    <small class="text-muted">Current file: <a href="@Model.SeminalUrl" target="_blank">View</a></small>
                }
            </div>

            <div class="form-group mb-3">
                <label for="projectDocument" class="control-label">Project (doc, docx, pdf)</label>
                <input type="file" name="projectDocument" id="projectDocument" class="form-control" accept=".doc,.docx,.pdf" />
                @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                {
                    <small class="text-muted">Current file: <a href="@Model.ProjectUrl" target="_blank">View</a></small>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
