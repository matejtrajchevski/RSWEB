@model IEnumerable<UniversityManagement.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" name="studentIdSearch" value="@ViewData["StudentIdSearch"]" class="form-control" placeholder="Student ID" />
        </div>
        <div class="col-md-3">
            <input type="text" name="firstNameSearch" value="@ViewData["FirstNameSearch"]" class="form-control" placeholder="First Name" />
        </div>
        <div class="col-md-3">
            <input type="text" name="lastNameSearch" value="@ViewData["LastNameSearch"]" class="form-control" placeholder="Last Name" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-secondary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Enrollment Date</th>
            <th>Credits</th>
            <th>Semester</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.StudentId)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@(item.EnrollmentDate?.ToString("dd/MM/yyyy"))</td>
            <td>@Html.DisplayFor(modelItem => item.AcquiredCredits)</td>
            <td>@Html.DisplayFor(modelItem => item.CurrentSemester)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
