@model IEnumerable<UniversityManagement.Models.Course>

@{
    ViewData["Title"] = "Мои предмети";
}

<div class="container mt-4">
    <h2>Добредојдовте, Професор</h2>
    <p class="lead">Листа на предмети што ги предавате</p>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5>@course.Title</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Кредити:</strong> @course.Credits</p>
                            <p><strong>Семестар:</strong> @course.Semester</p>
                            <p><strong>Програма:</strong> @course.Programme</p>
                            <p>
                                <strong>Професори:</strong>
                                @course.FirstTeacher?.FirstName @course.FirstTeacher?.LastName
                                @if (course.SecondTeacher != null)
                                {
                                    <span>, @course.SecondTeacher.FirstName @course.SecondTeacher.LastName</span>
                                }
                            </p>
                            <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-success">
                                Прегледај студенти
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Моментално не предавате ниту еден предмет.
        </div>
    }
</div>
