@model UniversityManagement.ViewModels.ProfessorCourseViewModel

@{
    ViewData["Title"] = "Детали за предмет";
}

<div class="container mt-4">
    <h2>@Model.Course.Title</h2>
    <p class="text-muted">Кредити: @Model.Course.Credits | Семестар: @Model.Course.Semester</p>

    <div class="mb-3">
        <form method="get" asp-action="CourseDetails" class="form-inline">
            <input type="hidden" name="id" value="@Model.Course.Id" />
            <label for="year" class="mr-2">Избери година:</label>
            <select name="year" id="year" class="form-control mr-2" onchange="this.form.submit()">
                @foreach (var year in Model.AvailableYears)
                {
                    <option value="@year" selected="@(year == Model.SelectedYear)">@year</option>
                }
            </select>
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
        </form>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model.Enrollments.Any())
    {
        <h4>Запишани студенти за @Model.SelectedYear година</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Индекс</th>
                    <th>Студент</th>
                    <th>Семестар</th>
                    <th>Испит</th>
                    <th>Семинарска</th>
                    <th>Проект</th>
                    <th>Дополнително</th>
                    <th>Вкупно</th>
                    <th>Оценка</th>
                    <th>Завршен</th>
                    <th>Статус</th>
                    <th>Акции</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr class="@(enrollment.IsActive ? "" : "table-secondary")">
                        <td>@enrollment.StudentIndex</td>
                        <td>@enrollment.StudentName</td>
                        <td>@enrollment.Semester</td>
                        <td>@(enrollment.ExamPoints?.ToString() ?? "—")</td>
                        <td>@(enrollment.SeminalPoints?.ToString() ?? "—")</td>
                        <td>@(enrollment.ProjectPoints?.ToString() ?? "—")</td>
                        <td>@(enrollment.AdditionalPoints?.ToString() ?? "—")</td>
                        <td><strong>@(enrollment.TotalPoints?.ToString() ?? "0")</strong></td>
                        <td>
                            @if (enrollment.Grade.HasValue)
                            {
                                <span class="badge bg-primary">@enrollment.Grade</span>
                            }
                            else
                            {
                                <span>—</span>
                            }
                        </td>
                        <td>@(enrollment.FinishDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                        <td>
                            @if (enrollment.IsActive)
                            {
                                <span class="badge bg-success">Активен</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Завршен</span>
                            }
                        </td>
                        <td>
                            @if (enrollment.IsActive)
                            {
                                <a asp-action="EditEnrollment" asp-route-id="@enrollment.EnrollmentId" class="btn btn-sm btn-warning">
                                    Уреди оценка
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Неактивен</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Нема запишани студенти за избраната година.
        </div>
    }
</div>
