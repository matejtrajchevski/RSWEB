@model IEnumerable<UniversityManagement.Models.Course>

@{
    ViewData["Title"] = "Предмети";
}

<div class="container mt-4">
    <h2>Управување со предмети</h2>

    <div class="mb-3">
        <a asp-action="CreateCourse" class="btn btn-primary">Додади нов предмет</a>
        <a asp-action="ImportCourses" class="btn btn-success">Import CSV</a>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Наслов</th>
                <th>Кредити</th>
                <th>Семестар</th>
                <th>Програма</th>
                <th>Прв професор</th>
                <th>Втор професор</th>
                <th>Акции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Credits</td>
                    <td>@course.Semester</td>
                    <td>@course.Programme</td>
                    <td>@course.FirstTeacher?.FirstName @course.FirstTeacher?.LastName</td>
                    <td>@course.SecondTeacher?.FirstName @course.SecondTeacher?.LastName</td>
                    <td>
                        <a asp-action="EditCourse" asp-route-id="@course.Id" class="action-link">Уреди</a> /
                        <a asp-action="EnrollStudents" asp-route-id="@course.Id" class="action-link">Запиши студенти</a> /
                        <a asp-action="ManageEnrollments" asp-route-id="@course.Id" class="action-link">Запишани</a> /
                        <a asp-action="DeleteCourse" asp-route-id="@course.Id" class="action-link text-danger">Избриши</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
