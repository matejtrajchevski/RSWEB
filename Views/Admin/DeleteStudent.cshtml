@model UniversityManagement.Models.Student

@{
    ViewData["Title"] = "Избриши студент";
}

<div class="container mt-4">
    <h2>Избриши студент</h2>

    <div class="alert alert-warning">
        <h4>Дали сте сигурни дека сакате да го избришете овој студент?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <div class="text-center mb-3">
                    <img src="@Model.ProfilePicture" alt="Профил" style="max-width: 200px; max-height: 200px;" />
                </div>
            }

            <dl class="row">
                <dt class="col-sm-3">Индекс</dt>
                <dd class="col-sm-9">@Model.StudentId</dd>

                <dt class="col-sm-3">Име</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Презиме</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Датум на запишување</dt>
                <dd class="col-sm-9">@(Model.EnrollmentDate?.ToString("dd.MM.yyyy") ?? "N/A")</dd>

                <dt class="col-sm-3">Стекнати кредити</dt>
                <dd class="col-sm-9">@Model.AcquiredCredits</dd>

                <dt class="col-sm-3">Тековен семестар</dt>
                <dd class="col-sm-9">@Model.CurrentSemester</dd>

                <dt class="col-sm-3">Ниво на образование</dt>
                <dd class="col-sm-9">@Model.EducationLevel</dd>
            </dl>
        </div>
    </div>

    <form method="post" asp-action="DeleteStudent">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Избриши</button>
            <a asp-action="Students" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>
