@model UniversityManagement.Models.Course

@{
    ViewData["Title"] = "Управувај со запишувања";
}

<div class="container mt-4">
    <h2>Запишани студенти: @Model.Title</h2>

    <div class="mb-3">
        <a asp-action="EnrollStudents" asp-route-id="@Model.Id" class="btn btn-primary">
            Запиши нови студенти
        </a>
        <a asp-action="Courses" class="btn btn-secondary">Назад</a>
    </div>

    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Индекс</th>
                    <th>Студент</th>
                    <th>Година</th>
                    <th>Семестар</th>
                    <th>Оценка</th>
                    <th>Датум на завршување</th>
                    <th>Статус</th>
                    <th>Акции</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr>
                        <td>@enrollment.Student?.StudentId</td>
                        <td>@enrollment.Student?.FirstName @enrollment.Student?.LastName</td>
                        <td>@enrollment.Year</td>
                        <td>@enrollment.Semester</td>
                        <td>@(enrollment.Grade?.ToString() ?? "—")</td>
                        <td>@(enrollment.FinishDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                        <td>
                            @if (enrollment.FinishDate == null)
                            {
                                <span class="badge bg-success">Активен</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Завршен</span>
                            }
                        </td>
                        <td>
                            @if (enrollment.FinishDate == null)
                            {
                                <form method="post" asp-action="UnenrollStudent" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                                    <input type="date" name="finishDate" class="form-control form-control-sm d-inline" style="width: 150px;" />
                                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Дали сте сигурни дека сакате да го отпишете овој студент?')">
                                        Отпиши
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Нема запишани студенти на овој предмет.
        </div>
    }
</div>
