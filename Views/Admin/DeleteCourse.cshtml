@model UniversityManagement.Models.Course

@{
    ViewData["Title"] = "Избриши предмет";
}

<div class="container mt-4">
    <h2>Избриши предмет</h2>

    <div class="alert alert-warning">
        <h4>Дали сте сигурни дека сакате да го избришете овој предмет?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Наслов</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Кредити</dt>
                <dd class="col-sm-9">@Model.Credits</dd>

                <dt class="col-sm-3">Семестар</dt>
                <dd class="col-sm-9">@Model.Semester</dd>

                <dt class="col-sm-3">Програма</dt>
                <dd class="col-sm-9">@Model.Programme</dd>

                <dt class="col-sm-3">Ниво на образование</dt>
                <dd class="col-sm-9">@Model.EducationLevel</dd>

                <dt class="col-sm-3">Прв наставник</dt>
                <dd class="col-sm-9">@(Model.FirstTeacher != null ? $"{Model.FirstTeacher.FirstName} {Model.FirstTeacher.LastName}" : "N/A")</dd>

                <dt class="col-sm-3">Втор наставник</dt>
                <dd class="col-sm-9">@(Model.SecondTeacher != null ? $"{Model.SecondTeacher.FirstName} {Model.SecondTeacher.LastName}" : "N/A")</dd>
            </dl>
        </div>
    </div>

    <form method="post" asp-action="DeleteCourse">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Избриши</button>
            <a asp-action="Courses" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>
