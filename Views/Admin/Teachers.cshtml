@model IEnumerable<UniversityManagement.Models.Teacher>

@{
    ViewData["Title"] = "Професори";
}

<div class="container mt-4">
    <h2>Управување со професори</h2>

    <div class="mb-3">
        <a asp-action="CreateTeacher" class="btn btn-primary">Додади нов професор</a>
        <a asp-action="ImportTeachers" class="btn btn-success">Import CSV</a>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Име</th>
                <th>Презиме</th>
                <th>Степен</th>
                <th>Академска титула</th>
                <th>Канцеларија</th>
                <th>Датум на вработување</th>
                <th>Акции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Degree</td>
                    <td>@teacher.AcademicRank</td>
                    <td>@teacher.OfficeNumber</td>
                    <td>@teacher.HireDate?.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="action-link">Уреди</a> /
                        <a asp-action="DeleteTeacher" asp-route-id="@teacher.Id" class="action-link text-danger">Избриши</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
