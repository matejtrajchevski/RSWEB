@model UniversityManagement.Models.Teacher

@{
    ViewData["Title"] = "Избриши професор";
}

<div class="container mt-4">
    <h2>Избриши професор</h2>

    <div class="alert alert-warning">
        <h4>Дали сте сигурни дека сакате да го избришете овој професор?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <div class="text-center mb-3">
                    <img src="@Model.ProfilePicture" alt="Профил" style="max-width: 200px; max-height: 200px;" />
                </div>
            }

            <dl class="row">
                <dt class="col-sm-3">Име</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Презиме</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Степен</dt>
                <dd class="col-sm-9">@Model.Degree</dd>

                <dt class="col-sm-3">Академски ранг</dt>
                <dd class="col-sm-9">@Model.AcademicRank</dd>

                <dt class="col-sm-3">Канцеларија</dt>
                <dd class="col-sm-9">@Model.OfficeNumber</dd>

                <dt class="col-sm-3">Датум на вработување</dt>
                <dd class="col-sm-9">@(Model.HireDate?.ToString("dd.MM.yyyy") ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <form method="post" asp-action="DeleteTeacher">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Избриши</button>
            <a asp-action="Teachers" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>
