@model UniversityManagement.Models.User

@{
    ViewData["Title"] = "Креирај корисник";
    var teachers = ViewBag.Teachers as List<UniversityManagement.Models.Teacher>;
    var students = ViewBag.Students as List<UniversityManagement.Models.Student>;
}

<div class="container mt-4">
    <h2>Креирај нов корисник</h2>

    <form asp-action="CreateUser" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Улога</label>
            <select asp-for="Role" class="form-select" id="roleSelect" required>
                <option value="">-- Избери улога --</option>
                <option value="Admin">Admin</option>
                <option value="Professor">Professor</option>
                <option value="Student">Student</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mb-3" id="teacherDiv" style="display:none;">
            <label asp-for="TeacherId" class="form-label">Професор</label>
            <select asp-for="TeacherId" class="form-select">
                <option value="">-- Избери професор --</option>
                @if (teachers != null)
                {
                    foreach (var teacher in teachers)
                    {
                        <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3" id="studentDiv" style="display:none;">
            <label asp-for="StudentId" class="form-label">Студент</label>
            <select asp-for="StudentId" class="form-select">
                <option value="">-- Избери студент --</option>
                @if (students != null)
                {
                    foreach (var student in students)
                    {
                        <option value="@student.Id">@student.FirstName @student.LastName (@student.StudentId)</option>
                    }
                }
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Креирај</button>
            <a asp-action="Users" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('roleSelect').addEventListener('change', function() {
            var role = this.value;
            var teacherDiv = document.getElementById('teacherDiv');
            var studentDiv = document.getElementById('studentDiv');

            teacherDiv.style.display = 'none';
            studentDiv.style.display = 'none';

            if (role === 'Professor') {
                teacherDiv.style.display = 'block';
            } else if (role === 'Student') {
                studentDiv.style.display = 'block';
            }
        });
    </script>
}
