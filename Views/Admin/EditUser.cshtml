@model UniversityManagement.Models.User

@{
    ViewData["Title"] = "Измени корисник";
    var teachers = ViewBag.Teachers as List<UniversityManagement.Models.Teacher>;
    var students = ViewBag.Students as List<UniversityManagement.Models.Student>;
}

<div class="container mt-4">
    <h2>Измени корисник</h2>

    <form asp-action="EditUser" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="text" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text text-muted">Оставете го истиот password или внесете нов</small>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Улога</label>
            <select asp-for="Role" class="form-select" id="roleSelect" required disabled>
                <option value="Admin">Admin</option>
                <option value="Professor">Professor</option>
                <option value="Student">Student</option>
            </select>
            <input type="hidden" asp-for="Role" />
            <small class="form-text text-muted">Улогата не може да се менува</small>
        </div>

        @if (Model.Role == "Professor")
        {
            <div class="mb-3">
                <label asp-for="TeacherId" class="form-label">Професор</label>
                <select asp-for="TeacherId" class="form-select" disabled>
                    <option value="">-- Избери професор --</option>
                    @if (teachers != null)
                    {
                        foreach (var teacher in teachers)
                        {
                            <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                        }
                    }
                </select>
                <input type="hidden" asp-for="TeacherId" />
                <small class="form-text text-muted">Професорот не може да се менува</small>
            </div>
        }

        @if (Model.Role == "Student")
        {
            <div class="mb-3">
                <label asp-for="StudentId" class="form-label">Студент</label>
                <select asp-for="StudentId" class="form-select" disabled>
                    <option value="">-- Избери студент --</option>
                    @if (students != null)
                    {
                        foreach (var student in students)
                        {
                            <option value="@student.Id">@student.FirstName @student.LastName (@student.StudentId)</option>
                        }
                    }
                </select>
                <input type="hidden" asp-for="StudentId" />
                <small class="form-text text-muted">Студентот не може да се менува</small>
            </div>
        }

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Зачувај</button>
            <a asp-action="Users" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
