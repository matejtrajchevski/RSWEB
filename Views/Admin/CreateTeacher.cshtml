@model UniversityManagement.Models.Teacher

@{
    ViewData["Title"] = "Додади професор";
}

<div class="container mt-4">
    <h2>Додади нов професор</h2>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FirstName">Име</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="LastName">Презиме</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Degree">Степен</label>
                    <input asp-for="Degree" class="form-control" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="AcademicRank">Академски ранг</label>
                    <input asp-for="AcademicRank" class="form-control" />
                    <span asp-validation-for="AcademicRank" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="OfficeNumber">Канцеларија</label>
                    <input asp-for="OfficeNumber" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="HireDate">Датум на вработување</label>
                    <input asp-for="HireDate" type="date" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label>Слика на профил</label>
            <input type="file" name="profilePicture" class="form-control" accept="image/*" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Зачувај</button>
            <a asp-action="Teachers" class="btn btn-secondary">Откажи</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
