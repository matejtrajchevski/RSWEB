@model IEnumerable<UniversityManagement.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" name="firstNameSearch" value="@ViewData["FirstNameSearch"]" class="form-control" placeholder="First Name" />
        </div>
        <div class="col-md-3">
            <input type="text" name="lastNameSearch" value="@ViewData["LastNameSearch"]" class="form-control" placeholder="Last Name" />
        </div>
        <div class="col-md-2">
            <input type="text" name="degreeSearch" value="@ViewData["DegreeSearch"]" class="form-control" placeholder="Degree" />
        </div>
        <div class="col-md-2">
            <input type="text" name="academicRankSearch" value="@ViewData["AcademicRankSearch"]" class="form-control" placeholder="Academic Rank" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-secondary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Degree</th>
            <th>Academic Rank</th>
            <th>Office Number</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Degree)</td>
            <td>@Html.DisplayFor(modelItem => item.AcademicRank)</td>
            <td>@Html.DisplayFor(modelItem => item.OfficeNumber)</td>
            <td>@(item.HireDate?.ToString("dd/MM/yyyy"))</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
