@model UniversityManagement.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<h1>Teacher Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Degree)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Degree)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AcademicRank)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AcademicRank)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OfficeNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.OfficeNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.HireDate)</dt>
        <dd class="col-sm-9">@(Model.HireDate?.ToString("dd/MM/yyyy"))</dd>

        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
        {
            <dt class="col-sm-3">Profile Picture</dt>
            <dd class="col-sm-9">
                <img src="@Model.ProfilePicture" alt="Profile" style="max-width: 300px;" class="img-thumbnail" />
            </dd>
        }
    </dl>

    <h3 class="mt-4">Courses as First Teacher</h3>
    @if (Model.CoursesAsFirstTeacher != null && Model.CoursesAsFirstTeacher.Any())
    {
        <ul>
            @foreach (var course in Model.CoursesAsFirstTeacher)
            {
                <li>@course.Title (Semester: @course.Semester)</li>
            }
        </ul>
    }
    else
    {
        <p>No courses as first teacher.</p>
    }

    <h3 class="mt-4">Courses as Second Teacher</h3>
    @if (Model.CoursesAsSecondTeacher != null && Model.CoursesAsSecondTeacher.Any())
    {
        <ul>
            @foreach (var course in Model.CoursesAsSecondTeacher)
            {
                <li>@course.Title (Semester: @course.Semester)</li>
            }
        </ul>
    }
    else
    {
        <p>No courses as second teacher.</p>
    }
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
